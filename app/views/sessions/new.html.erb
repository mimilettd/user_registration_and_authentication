<h4>Log in:</h4>

<%= form_for(:session, url: login_path) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <dv class="field">
    <%= f.submit "Log in" %>
  </div>

<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
